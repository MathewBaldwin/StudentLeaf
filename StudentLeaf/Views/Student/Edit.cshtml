@model StudentLeaf.Models.Student
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Save", "Student"))
{
   
        if (Model.ActiveLessons.Count < 2)
        {
            <div class="form-group">
                @Html.LabelFor(n => n.ActiveLessons[0].LessonPlan)
                @Html.TextBoxFor(n => n.ActiveLessons[0].LessonPlan, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.ActiveLessons[0].Hours)
                @Html.TextBoxFor(n => n.ActiveLessons[0].Hours, new { @class = "form-control" })                    
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.ActiveLessons[0].SInstructor)
                @Html.TextBoxFor(n => n.ActiveLessons[0].SInstructor, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.ActiveLessons[0].Style)
                @Html.TextBoxFor(n => n.ActiveLessons[0].Style, new { @class = "form-control"})
            </div>
        }
        else
        {
         @Html.LabelFor(n => n.ActiveLessons[0].LessonPlan)
         @Html.DropDownListFor(n => n.ActiveLessons,new SelectList(Model.ActiveLessons, "", "LessonPlan" ),"- Please Select a Lesson Plan -", new { @class = "form-control" })
    }

   

}



